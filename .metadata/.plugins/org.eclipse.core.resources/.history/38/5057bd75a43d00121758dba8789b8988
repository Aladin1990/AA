package main;

import java.awt.Dimension;
import java.awt.event.KeyEvent;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

import javax.swing.ImageIcon;
import javax.swing.JComponent;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JTabbedPane;

import net.miginfocom.swing.MigLayout;

public class GUI extends JFrame{
	GUI() {
		super("GUI");
		JTabbedPane tabbedPane = new JTabbedPane();

		JTabbedPane panel1 = trueFalsePanel("Panel #1");
		tabbedPane.addTab("Tab 1", panel1);
		tabbedPane.setMnemonicAt(0, KeyEvent.VK_1);

		JTabbedPane panel2 = matchingPanel("Panel #2");
		tabbedPane.addTab("Tab 2", panel2);
		tabbedPane.setMnemonicAt(1, KeyEvent.VK_2);

		JTabbedPane panel3 = multiChoicePanel("Panel #3");
		tabbedPane.addTab("Tab 3", panel3);
		tabbedPane.setMnemonicAt(2, KeyEvent.VK_3);

		JTabbedPane panel4 = shortAnswerPanel("Panel #4 (has a preferred size of 410 x 50).");
		tabbedPane.addTab("Tab 4", panel4);
		tabbedPane.setMnemonicAt(3, KeyEvent.VK_4);
		
		JTabbedPane panel5 = shortAnswerPanel("Panel #4 (has a preferred size of 410 x 50).");
		tabbedPane.addTab("Tab 5", panel5);
		tabbedPane.setMnemonicAt(3, KeyEvent.VK_4);
		
		JTabbedPane panel6 = shortAnswerPanel("Panel #4 (has a preferred size of 410 x 50).");
		tabbedPane.addTab("Tab 6", panel6);
		tabbedPane.setMnemonicAt(3, KeyEvent.VK_4);
		
		JTabbedPane panel7 = shortAnswerPanel("Panel #4 (has a preferred size of 410 x 50).");
		tabbedPane.addTab("Tab 7", panel7);
		tabbedPane.setMnemonicAt(3, KeyEvent.VK_4);
		
		JTabbedPane panel8 = shortAnswerPanel("Panel #4 (has a preferred size of 410 x 50).");
		tabbedPane.addTab("Tab 8", panel8);
		tabbedPane.setMnemonicAt(3, KeyEvent.VK_4);
		
		getContentPane().add(tabbedPane);
        setSize(500,400);
        setLocationRelativeTo(null);
        setVisible(true);
        setResizable(false);
        addWindowListener(new WindowAdapter() {
            public void windowClosing(WindowEvent e) 
            { System.exit(0); }
        });
	}
	

	JTabbedPane trueFalsePanel(String panelName) {
		JTabbedPane frame = new JTabbedPane();
		JPanel panel = new JPanel();
		panel.setLayout(new MigLayout("", "[][]", ""));
		return frame;
	}

	JTabbedPane matchingPanel(String panelName) {
		JTabbedPane frame = new JTabbedPane();
		JPanel panel = new JPanel();
		panel.setLayout(new MigLayout("", "[][]", ""));
		return frame;
	}

	JTabbedPane multiChoicePanel(String panelName) {
		JTabbedPane frame = new JTabbedPane();
		JPanel panel = new JPanel();
		panel.setLayout(new MigLayout("", "[][]", ""));
		return frame;
	}

	JTabbedPane shortAnswerPanel(String panelName) {
		JTabbedPane frame = new JTabbedPane();
		JPanel panel = new JPanel();
		panel.setLayout(new MigLayout("", "[][]", ""));
		return frame;
	}

}
